{% extends '@!PrestaShop/Admin/layout.html.twig' %}
{# Since PS 8.0.0 you can use @PrestaShopCore instead of @!Prestashop
(https://devdocs.prestashop-project.org/8/modules/concepts/templating/admin-views/#override-templates) #}

{% block content %}
    <div class="row justify-content-center">
        <div class="col">
            <form method="post" class="form-horizontal">
                <div class="card">
                    <h3 class="card-header">
                        <i class="material-icons">settings</i> {{ 'Generate boxes'|trans({}, 'Modules.Indexboxes.Admin') }}
                    </h3>
                    <div class="card-block">
                        <div class="card-text">
                            <div class="row">
                                <div class="col-sm">
                                    <div class="alert alert-info" role="alert">
                                        <div class="alert-text">
                                            <p>{{ 'If you want to generate the demo boxes, please click on "%generate_button_label%". Please be aware that this will remove your existing boxes (if present).'|trans({'%generate_button_label%': 'Generate boxes'|trans({}, 'Modules.Indexboxes.Admin')}, 'Modules.Indexboxes.Admin') }}</p>
                                            <p>{{ 'If you don\'t want to generate the demo boxes, simple click on "%back_button_label%" to go back to the list.'|trans({'%back_button_label%': 'Go back to boxes list'|trans({}, 'Modules.Indexboxes.Admin')}, 'Modules.Indexboxes.Admin') }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-inline-flex">
                            <a class="btn btn-outline-secondary" href="{{ path('ps_indexboxes_box_index') }}">
                                {{ 'Go back to boxes list'|trans({}, 'Modules.Indexboxes.Admin') }}
                            </a>
                        </div>
                        <div class="d-inline-flex float-right">
                            <button class="btn btn-primary">{{ 'Generate boxes'|trans({}, 'Modules.Indexboxes.Admin') }}</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
